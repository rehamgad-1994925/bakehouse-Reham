pipeline { 
    environment { 
        registry = "rehamgad1994/lab" 
        registryCredential = 'dockerhub_id' 
        dockerImage = '' 
        }
    agent any 

    stages { 
        //stage('Cloning our Git') { 
            //steps { 
                //git 'https://github.com/rehamgad-1994925/bakehouse-Reham'}
    
